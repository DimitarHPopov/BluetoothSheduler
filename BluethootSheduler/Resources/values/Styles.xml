<resources>
  <style name="Theme.Base" parent="android:Theme.Material.Light">
    <item name="android:statusBarColor">#126CAC</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorPrimary">#126CAC</item>
    <item name="android:colorPrimaryDark">#126CAC</item>
  </style>
  
    <style name="Theme.Splash" parent="android:Theme.Material.Light">
      <item name="android:windowBackground">@drawable/splashscreen</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:statusBarColor">#126CAC</item>
    </style>

  <style name="CheckBox">
    <item name="android:textColor">@color/blue_color</item>
  </style>
  <style name="btn_style">
    <item name="android:textColor">@color/blue_color</item>
    <item name="android:background">@drawable/button_blue_border</item>
    <item name="android:layout_margin">5dp</item>
  </style>
  <style name="txt_style">
    <item name="android:textColor">@color/gray_text</item>
    <item name="android:layout_margin">5dp</item>
  </style>
</resources>